  font-size: 40px;
}

 .change-order{
  display: flex;
  justify-content: center;
  height: 450px;
 }
    
@media (max-width: 991px){
  .change-order{
    order: 1;
  }
}

.button-join{
  width: 100px;
  background-color: #007bbd;
}


.bg-image-container {
  background: linear-gradient(0deg, rgba(0, 0, 0, 0.993), rgba(0, 0, 0, 0)), 
              url('/Public/backround.png');
  background-size: 110%; /* Cover the container */
  background-position: center; /* Center the image */
  background-repeat: no-repeat; /* Prevent repetition */
  height: 400px; /* Set container height */
  transition: background-size 0.5s ease, transform 0.5s ease; 
  cursor: pointer;/* Smooth scaling transition */
  
}

.main-article:hover .bg-image-container  {
  background-size: 120%;/* Scale the container slightly */
  
}

