  <body>
    
    
    <section>
      <div class="container mt-5">
        <div class="row" >
            <div class="col-md-8 mx-auto" >
              <div style="padding-bottom: 12px;">
                <a href="" style="text-decoration: none; color: #ccc;">Home Page  </a>> <a href="" style="color: #007bbd;text-decoration: none;"><%- categories %></a>
              </div>
                <h1 class="fw-bold thumbnail_title" style="padding-bottom: 8px; " ><%-title%></h1>
                <div style="border-left: #007bbd solid ; padding-left: 8px;color: #ccc;font-weight: 300; font-size: 0.8rem;">
                  <%- description %>
                </div>
                <div class="d-flex col" style="padding-bottom: 12px; align-items: center;align-content: center; padding-top: 16px;">
                  <i class="bi bi-person-circle" style="padding-right: 10px;font-size: 26px;"></i>
                  <div style="flex-grow: 1; color: #ccc; font-size: 0.8rem;font-weight: 300;"><%- writer %></div>

              
                  <a href="" id="whatsapp">
                    <button class="rounded-circle  text-white d-flex justify-content-center align-items-center icon-share"  >
                      <i class="bi bi-whatsapp icon-size" ></i>
                    </button>
                  </a>
                  <a href="" id="facebook">
                    <button class="rounded-circle  text-white d-flex justify-content-center align-items-center icon-share">
                      <i class="bi bi-facebook icon-size" ></i>
                    </button>
                  </a>
                  <button id="copy_link" class="rounded-circle  text-white d-flex justify-content-center align-items-center icon-share">
                    <i class="bi bi-link-45deg icon-size" ></i>
                    <div class="copy_link" id="copied">Link Copied</div>
                  </button>
                </div>

                <div class="thumbnail" style="background-color: #007bbd00;">
                  <img src="<%- image %>" style="width: 100%;height: 100%; border-radius: 8px;" >
                </div>

                <div class="content mt-5">
                  <%- content%>
                </div>


                  <div>
                    <h2 class="article-title-main" style="font-size: 24px; margin-bottom: 30px; margin-top: 64px; color: #ccc;">See Others</h2>
                    <% for( let index = 0; index < 3; index++ ) { %>
                      <a href="<%- articleLink[index] %>" style="text-decoration: none;">
                        <div class="article-container">
                          <div class="d-flex media mb-2 ">
                            <img src="<%- generate_article[index].image.url %>" alt="Article Image">
                            <div>
                              <p class="article-title text-start article-side"><%- generate_article[index].title %></p>
                              <span class="tag"><%- generate_article[index].categories%></span>
                              <% let description = generate_article[index].description.length > 177 ? generate_article[index].description.slice(0,88) +"..." : generate_article[index].description  %>
                              <p style="color: #ccc;font-size: 0.8rem;"><%-description %></p>
                            </div>
                          </div>
                        </div>
                      </a>
                    <% } %>
                  </div>

                 


    
            </div>
        </div>
    
        
    </div>
    </section>

   
   
    

        
