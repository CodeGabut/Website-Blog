    .grid-container {
      display: none;
      position: absolute;
      left: 50%;
  transform: translate(-50%, -50%);
      grid-template-columns: repeat(12, 75px);
      gap: 15px;
      justify-content: center; /* Centers the grid horizontally */
      padding: 20px;
      max-width: calc(12 * 75px + 11 * 15px); /* Adjust max width to fit the grid */
      margin: 0 auto; /* Centering the grid container */
    }

    .grid-item {
      background-color: #575757;
      height: 1080px; /* Same height as the width */
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 10%;
      text-align: center;
    }

    .hero {
  background-color: #007bbd00; /* Subtle gradient background */
  min-height: 100vh; /* Full height */
  display: flex;
  align-items: center;
}
.hero h1 {
  color: #00aeff; /* Bright blue text */
}
.hero p {
  color: #ccc; /* Light gray text */
}
.hero .btn-primary {
  background-color: #00aeff;
  border: none;
}
.hero .btn-primary:hover {
  background-color: #007bbd;
}

.quote{
  font-family: "Audiowide", serif;
  font-weight: 400;
  font-style: normal;
  font-size: 40px;
}

.description{
  font-size: 14px;
}

.action{
  font-size: 14px;
}

section {
      padding: 60px 0;
    }

    .article-title {
      text-align: center;
      margin-bottom: 20px;
      font-size: 1rem;
      color: #fff;
    }

    .article-card {
      background-color: #1a1a1a00;
      border: none;
      
      overflow: hidden;
    }

    .article-card img {
      height: 200px;
      object-fit: cover;
    }

    .article-body {
      padding: 15px;
    }

    .tag {
      background-color: #007bff;
      color: #fff;
      font-size: 0.6rem;
      padding: 2px 6px;
      border-radius: 0px;
      margin-bottom: 10px;
      display: inline-block;
    }

    .article-title-text {
      cursor: pointer;
      font-size: 1.4rem;
      font-weight: bold;
      color: #F5F5F5;
      margin-bottom: 10px;
      transition: 0.2s ease;
    }
    
    

    .main-article{
      width: 24rem;
      
    }
    .main-article-body{
      height: 450px;
    }

    
      
      .media img {
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-right: 15px;
        border-radius: 5px;
      }
      .article-title {
        font-size: 16px;
        font-weight: bold;
        margin: 0;
      }
      .article-date {
        font-size: 12px;
        color: gray;
      }
      .article-container {
        
        padding: 8px 0;
        border-bottom: 1px solid #007bff;
      }


      .container-custom {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
     
    }

    .card-custom {
      position: relative;
      width: 250px;
      height: 400px;
      background-color: black;
      overflow: hidden;
      border: none;
    }

    .card-custom img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0.8;
    }

    .card-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      color: white;
