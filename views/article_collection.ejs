  <body>
    
    
   <section class="hero">
    <div class="container">
      <h1>DATA ARTICLE</h1>
      <table class="table table-dark p-5" style="background-color: #f4f4f4; color: #333;">
        <thead style="background-color: #4CAF50; color: white;">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Realease date</th>
            <th scope="col">Writer</th>
            <th scope="col">View</th>
            <th scope="col">Action</th>

          </tr>
        </thead>
        <tbody>
          <% for( let index = 0; index < result.length; index++ ) { %>
            <tr style="background-color: #ffcccb;">
              <th scope="row"><%-index+1%>.</th>
              <td><%-result[index].title%></td>
              <td><%-result[index].time%></td>
              <td><%-result[index].writer%></td>
              <td>1</td>
              <td>  <form method="POST" action="/article_data?_method=DELETE">
                <input type="hidden" value="<%-result[index].title%>" name="title">
                <button type="submit" class="btn btn-outline-primary"><i class="bi bi-trash-fill"></i></button>
              </form></td>
              <td>
                <a href="http://localhost:3000/article/<%-articleLink[index]%>" class="btn btn-outline-primary"><i class="bi bi-eye"></i></a>
              </td>
              <td>
                <button type="submit" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i></button>
              </td>
            </tr>
          <% } %>
          
        </tbody>
      </table>
      
    </div>
    
